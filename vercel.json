{
  "redirects": [
    {
      "source": "/posts",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/posts/",
      "destination": "/blog/",
      "permanent": true
    },
    {
      "source": "/posts/(.*)",
      "destination": "/blog/$1",
      "permanent": true
    }
  ]
} 