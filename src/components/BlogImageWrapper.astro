  // ëª¨ë“  ê²½ë¡œì—ì„œ ì‹¤íŒ¨í•œ ê²½ìš° ë””ë²„ê¹… ì •ë³´ ì¶œë ¥
  if (!useAstroImage && absolutePath) {
    console.log(`âŒ ì´ë¯¸ì§€ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŒ: ${imageSrc}`);
    console.log(`ğŸ“‚ ì‚¬ìš© ê°€ëŠ¥í•œ ê²½ë¡œ ìƒ˜í”Œ:`, Object.keys(images).filter(key => key.includes(finalSlug || '')).slice(0, 5));
  }
}

// ìƒˆë¡œìš´ LQIP ì‹œìŠ¤í…œ ì‚¬ìš© - ì„œë²„ì‚¬ì´ë“œì—ì„œ ì²˜ë¦¬
const lqipInfo = await getLQIPInfo(imageSrc, finalSlug);
const { renderInfo, aspectRatio, hasData } = lqipInfo;

// ì´ë¯¸ì§€ ë†’ì´ ê³„ì‚° (aspectRatioê°€ ìˆëŠ” ê²½ìš°)
let calculatedHeight = height;
if (!height && aspectRatio !== 'auto') {
  const ratio = parseFloat(aspectRatio);
