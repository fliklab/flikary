---
import { LOGO_IMAGE, SITE } from "@config";
import Hr from "./Hr.astro";
import Navigation from "./Navigation/index";

export interface Props {
  activeNav?: "blog" | "archives" | "tags" | "resume"| "about" | "search";
}
---

<header>
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo whitespace-nowrap">
        {
          LOGO_IMAGE.enable ? (
            <img
              src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
              alt={SITE.title}
              width={LOGO_IMAGE.width}
              height={LOGO_IMAGE.height}
            />
          ) : (
            SITE.title
          )
        }
      </a>
      <div class="nav-wrapper ">
        <Navigation client:load />
      </div>
    </div>
  </div>
  <Hr />
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-3xl flex-col items-center justify-between sm:flex-row;
  }
  .top-nav-wrap {
    @apply relative flex w-full items-start justify-between p-4 sm:items-center sm:py-8;
  }
  .logo {
    @apply py-1 text-xl font-semibold sm:text-2xl;
  }
  .nav-wrapper {
    @apply flex items-center justify-end;
  }
</style>
