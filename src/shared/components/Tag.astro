---
import TagIcon from "@icons/content/Tag.astro";

export interface Props {
  tag: string;
  tagName: string;
  count?: number;
  size?: "sm" | "lg";
}

const { tag, tagName, count, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 underline-offset-4" : "my-3 mx-1 underline-offset-8"
  }`}
>
  <!-- TODO: re-enable shared element transition -->
  <a
    href={`/tags/${tag}/`}
    class={`${size === "sm" ? "text-sm" : "text-lg"} pr-2 group flex items-center`}
  >
    <TagIcon class={`inline-block ${size === "sm" ? "w-5 h-5" : "w-6 h-6"}`} />
    &nbsp;<span>{tagName}</span>
    {count && <sup class="tag-count">{count}</sup>}
  </a>
</li>

<style>
  li {
    /* View Transitions 충돌 방지 */
    view-transition-name: none;
  }
  a {
    @apply relative underline decoration-dashed hover:-top-0.5 hover:text-skin-accent focus-visible:p-1;
    /* View Transitions 충돌 방지: 구체적인 속성만 transition */
    transition: color 150ms ease, top 150ms ease;
  }
  a svg {
    @apply text-skin-base opacity-80 group-hover:fill-skin-accent;
    transition: fill 150ms ease;
  }
  .tag-count {
    font-size: 0.7em;
    opacity: 0.6;
    margin-left: 0.25rem;
  }
</style>
