---
import TagIcon from "@icons/content/Tag.astro";

export interface Props {
  tag: string;
  tagName: string;
  count?: number;
  size?: "sm" | "lg";
}

const { tag, tagName, count, size = "sm" } = Astro.props;
---

<li
  class={`inline-block ${
    size === "sm" ? "my-1 underline-offset-4" : "my-3 mx-1 underline-offset-8"
  }`}
>
  <!-- TODO: re-enable shared element transition -->
  <a
    href={`/tags/${tag}/`}
    class={`${size === "sm" ? "text-sm" : "text-lg"} pr-2 group flex items-center`}
  >
    <TagIcon class={`inline-block ${size === "sm" ? "w-5 h-5" : "w-6 h-6"}`} />
    &nbsp;<span>{tagName}</span>
    {count && <sup class="tag-count">{count}</sup>}
  </a>
</li>

<style>
  li {
    /* View Transitions 충돌 방지 */
    view-transition-name: none;
  }
  a {
    @apply underline decoration-dashed focus-visible:p-1;
    color: rgb(var(--color-text-base));
    /* GPU 가속을 위해 transform 사용, top 대신 translateY */
    transform: translateY(0);
    transition: color 150ms ease, transform 150ms ease;
    will-change: transform;
  }
  a:hover {
    color: rgb(var(--color-accent));
    transform: translateY(-2px);
  }
  a svg {
    color: rgb(var(--color-text-base));
    opacity: 0.8;
    transition: color 150ms ease;
  }
  a:hover svg {
    color: rgb(var(--color-accent));
  }
  .tag-count {
    font-size: 0.7em;
    opacity: 0.6;
    margin-left: 0.25rem;
  }
</style>
