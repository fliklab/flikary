---
import type { Page } from "astro";
import LinkButton from "./LinkButton.astro";
import type { CollectionEntry } from "astro:content";
import PaginationLeft from "@icons/navigation/PaginationLeft.astro";
import PaginationRight from "@icons/navigation/PaginationRight.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav class="pagination-wrapper" aria-label="Pagination">
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        className={`pagination-btn ${page.url.prev ? "" : "disabled"}`}
        ariaLabel="Previous page"
      >
        <PaginationLeft class:list={[{ "disabled-svg": !page.url.prev }]} />
      </LinkButton>
      <span class="pagination-info">{page.currentPage} / {page.lastPage}</span>
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        className={`pagination-btn ${page.url.next ? "" : "disabled"}`}
        ariaLabel="Next page"
      >
        <PaginationRight class:list={[{ "disabled-svg": !page.url.next }]} />
      </LinkButton>
    </nav>
  )
}

<style>
  .pagination-wrapper {
    @apply mb-8 mt-auto flex items-center justify-center gap-4;
  }
  .pagination-btn {
    @apply flex h-10 w-10 items-center justify-center rounded-full;
    color: rgb(var(--color-text-base));
    transition: color 160ms ease;
  }
  .pagination-btn:hover {
    color: rgb(var(--color-accent));
  }
  .pagination-info {
    @apply text-sm;
    color: rgba(var(--color-text-base), 0.7);
  }
  .disabled {
    @apply pointer-events-none select-none opacity-50;
  }
</style>
